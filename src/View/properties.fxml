<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <children>
      <Label layoutX="73.0" layoutY="114.0" text="Maze Level:">
         <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="47.0" layoutY="164.0" text="Solving Algorithm:">
         <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="118.0" layoutY="54.0" text="Maze Settings" textAlignment="CENTER">
         <font>
            <Font name="Arial Rounded MT Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btn_OK" layoutX="161.0" layoutY="221.0" mnemonicParsing="false" onAction="#setSettings" text="OK">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Button>
      <MenuButton fx:id="levelList" layoutX="180.0" layoutY="111.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Level">
        <items>
          <MenuItem mnemonicParsing="false" text="Empty" onAction="#selectMenuLevel"/>
          <MenuItem mnemonicParsing="false" text="Simple" onAction="#selectMenuLevel"/>
           <MenuItem mnemonicParsing="false" text="Complicated" onAction="#selectMenuLevel"/>
        </items>
      </MenuButton>
      <MenuButton fx:id="solveList" layoutX="180.0" layoutY="160.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Solving Algorithm">
        <items>
          <MenuItem mnemonicParsing="false" text="Depth First Search" onAction="#selectMenuSolve"/>
          <MenuItem mnemonicParsing="false" text="Breadth First Search" onAction="#selectMenuSolve"/>
           <MenuItem mnemonicParsing="false" text="Best First Search" onAction="#selectMenuSolve"/>
        </items>
      </MenuButton>
   </children>
</AnchorPane>
